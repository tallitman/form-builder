{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015"],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config": [
        "config.ts"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@routes/*": [
		"routes",
        "routes/*"
      ],
      "@logger": [
        "logger.ts"
      ],
      "@models/*": [
        "models/*"
      ]
    },
    "typeRoots": ["./typings"],
    "esModuleInterop": true
  }
}
